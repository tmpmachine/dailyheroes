{
  "name": "DailyHeroes",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Time management app for heroes.",
  "homepage_url": "https://pacolemon.blogspot.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "offscreen",
    "notifications", 
    "alarms", 
    "background", 
    "storage",
    "identity"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "oauth2": {
    "client_id": "254780146992-2q6tb47ckr9tml8gch24qpbkvva10u6f.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/drive.file", "https://www.googleapis.com/auth/drive.appdata"]
  },
  "action" : {
    "default_icon" : "icons/icon.webp",
    "default_popup" : "src/index.html"
  }
}